@import "mixi.styl"
*
  margin 0
  padding 0
a
  text-decoration none
  color #000
ol
ul
  list-style none
input
textarea
  box-shadow none
  outline none
  &:acitve
  &:focus
    appearance none
    border 1px solid #ccc
#app
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  width 500px
  font-family '微软雅黑'
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  font-size 16px
  margin 0% auto
  overflow hidden
@media screen and (max-width 768px)
  #app
    width 100%
    border none
.border-1px
    height 100%
    border-left: 1px solid #2CA2B4
    border-right: 1px solid #2CA2B4
.backgroundColor
  background-color #2CA2B4
  color #fff
.app-content
  position absolute
  top 44px
  left 1px
  bottom 55px
  right 1px
  background-color #f2f2f2
  overflow-y scroll
  ol
  ul
    background-color #fff
    li
      border-top 1px solid #ccc
      a
        display block
        line-height 3rem
        background-color #fff
        &:hover
          background-color #86CBD6
          color #fff
